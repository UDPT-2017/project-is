<div class="chatbox chatbox--tray chatbox--empty">
        <div class="chatbox__title">
            <h5><a href="#">Chăm sóc khách hàng</a></h5>
            <button class="chatbox__title__tray">
                <span></span>
            </button>
            <button class="chatbox__title__close">
                <span>
                    <svg viewBox="0 0 12 12" width="12px" height="20px">
                        <line stroke="#FFFFFF" x1="11.75" y1="0.25" x2="0.25" y2="11.75"></line>
                        <line stroke="#FFFFFF" x1="11.75" y1="11.75" x2="0.25" y2="0.25"></line>
                    </svg>
                </span>
            </button>
        </div>
        <div id="wrapper">
          <div id="loginForm">
            <div id = "TieuDe">
              <h3 >Tên của bạn là gì vậy nè...</h3>
            </div>
            <input class = "form-group" type="text" id="txtUsername" placeholder="Tên của bạn..." />
            <br>
            <input class = "form-group" type="text" id="txtSDT" placeholder="Số điện thoại..." />
            <br>
            <input class = "btn btn-success" type="button" value="Đăng kí" id="btnRegister" />
          </div>

          <div id="chatForm">     
            <div id="right">
              
              <div id="listMessages"></div> 
              <div id="thongbao"></div>              
              <input type="text" id="txtMessage" placeholder="Nhập tin nhắn..." />
              <input type="button" id="btnSendMessage" value="Gửi" />

            </div>
          </div>
        </div>
        
    </div>
